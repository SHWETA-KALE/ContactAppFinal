    <style>
        .navbar {
            padding-top: 0.4rem;
            padding-bottom: 0.4rem;
        }
    </style>

    <nav class="navbar navbar-expand-lg navbar-dark bg-dark fixed-top">
        <div class="container d-flex justify-content-between align-items-center">
            <!-- Left side: Application name -->
            <a class="navbar-brand" href="@Url.Action("Index", "Home")">Contact Application</a>
            <!-- Center: Welcome message -->
            <div class="d-flex flex-grow-1 justify-content-center">
                @if (User.Identity.IsAuthenticated)
                {
                    <span class="navbar-text text-white">Welcome Admin, @User.Identity.Name</span>
                }
            </div>

            @*right side*@
        <div class="d-flex">

            @if (User.Identity.IsAuthenticated)
            {
                if (User.IsInRole("Admin"))
                {
                    <a class="nav-link text-white me-3 align-self-center" href="@Url.Action("ViewAllAdmins", "User" )">View All Admins</a>

                }
                @*<a class="nav-link text-white ms-3" href="@Url.Action("Logout", "User")">Logout</a>*@
                @Html.ActionLink("Logout", "Logout", "User", null, new { @class = "btn btn-outline-light" })
            }

        </div>

        </div>
    </nav>


    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - My ASP.NET Application</p>
        </footer>
    </div>

    <script src="~/Scripts/jquery-1.10.2.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
</body>
